<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".preference.RollActivity" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight=".70"
            android:orientation="vertical"
            android:padding="0dp"
            >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textColor="#FFFFFF"
                android:text="Trim +/-"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textColor="#666666"
                android:text="Choose between -100 to 100. Default value is 0"
                android:textSize="14sp"
                />
        </LinearLayout>
        <EditText
            android:id="@+id/trim"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight=".30"
            android:gravity="center"
            android:textSize="18sp"
            android:text="0"
            android:inputType="number"
            android:imeOptions="flagNoExtractUi"
            />
    </LinearLayout>

    <!-- 
         *************
    -->
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#333333"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="17dp"
        />

    <!--
        The Max and Min value     
    -->
    <LinearLayout
        android:id="@+id/minmax"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight=".40"
            android:layout_marginRight="5dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textColor="#FFFFFF"
                android:text="Minimum"
                android:textSize="18sp"
                android:gravity="right"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textColor="#666666"
                android:text="Value must be less than max."
                android:textSize="10sp"
                android:gravity="right"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/minmax_text"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight=".20"
            android:gravity="center"
            android:textSize="23sp"
            android:text="0-100"
            />
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight=".40"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textColor="#FFFFFF"
                android:text="Maximum"
                android:textSize="18sp"
                android:gravity="left"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textColor="#666666"
                android:text="Value must be greater than min."
                android:textSize="10sp"
                android:gravity="left"
                />
        </LinearLayout>
    </LinearLayout>

    <!-- 
         *************
    -->
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#333333"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="17dp"
        />

    <!--
        The Max and Min value     
    -->
    <LinearLayout
        android:id="@+id/invert"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:onClick="eventClickInvert"
        >
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight=".70"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textColor="#FFFFFF"
                android:text="Invert"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textColor="#666666"
                android:text="Enable to send inverted values to the server."
                android:textSize="14sp"
                />
        </LinearLayout>
        <Switch
            android:id="@+id/invert_switch"
            android:layout_width="0dip"
            android:layout_weight=".30"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:switchTextOff="Normal"
            android:switchTextOn="Inverted"
            android:gravity="center"
            />
    </LinearLayout>
</LinearLayout>
