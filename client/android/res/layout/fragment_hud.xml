<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:orientation="vertical"
    tools:context=".MainActivity" >
    <LinearLayout
        android:id="@+id/hud_canvas"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical" />
    <RelativeLayout
        android:id="@+id/hud_power_slider"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/power_stick"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/hud_text"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_weight="20"
            >
        </LinearLayout>
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/power_direction_toggle">
                <TextView
                    android:id="@+id/hud_text_throttle_min_value"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="#444444"
                    android:textSize="18dp"
                    android:typeface="monospace"
                    android:text="000"
                    />
                <TextView
                    android:id="@+id/hud_text_throttle_value"
                    android:layout_width="100dp"
                    android:layout_height="65dp"
                    android:textColor="#FFFFFF"
                    android:textSize="55dp"
                    android:text="50"
                    android:gravity="center"
                    android:padding="0dp"
                    android:layout_marginBottom="0dp"/>
                <TextView
                    android:id="@+id/hud_text_throttle_max_value"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="#444444"
                    android:textSize="18dp"
                    android:typeface="monospace"
                    android:text="000"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="-12dp">
                <TextView
                    android:id="@+id/hud_text_drive_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2FB900"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:typeface="monospace"
                    android:text="@string/hud_drive"
                    android:layout_marginRight="2sp" 
                    />
                <TextView
                    android:id="@+id/hud_text_reverse_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#444444"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:typeface="monospace"
                    android:text="@string/hud_reverse"
                    android:layout_marginLeft="2sp" 
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/hud_logo_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="33"
                >
            <Button
                android:id="@+id/dot_settings"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:gravity="center"
                android:background="@drawable/options_icon_states"
                />
        </LinearLayout>
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                >
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >
                <TextView
                    android:id="@+id/hud_text_roll_min_value"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="#444444"
                    android:textSize="18dp"
                    android:typeface="monospace"
                    android:text="@string/hud_roll_min"
                    />
                <TextView
                    android:id="@+id/hud_text_roll_value"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="42dp"
                    android:textStyle="bold"
                    android:includeFontPadding="false"
                    android:layout_marginBottom="4dp"
                    android:text="@string/hud_roll_mid"
                    />
                <TextView
                    android:id="@+id/hud_text_roll_max_value"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="#444444"
                    android:textSize="18dp"
                    android:typeface="monospace"
                    android:text="@string/hud_roll_max"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="-5dp">
                <TextView
                    android:id="@+id/hud_text_tilt_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#444444"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:typeface="monospace"
                    android:gravity="center"
                    android:text="@string/hud_roll"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_weight="20">
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/hud_text_ip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/ip_info"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="168dp"
            android:layout_marginLeft="390dp"
            android:orientation="vertical"
            >
        <TextView
            android:id="@+id/hud_text_connection_value"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:textColor="#444444"
            android:textSize="10sp"
            android:typeface="monospace"
            android:text="@string/hud_connection"
            android:textAlignment="textEnd"
            android:gravity="right"
            android:layout_marginBottom="2dp"
            />
        <TextView
            android:id="@+id/hud_text_ip_value"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:textColor="#444444"
            android:textSize="10sp"
            android:typeface="monospace"
            android:text="@string/hud_ip"
            android:gravity="right"
            android:layout_marginTop="2sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/hud_text_left_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="left|bottom"
        android:orientation="vertical"
        >

      <LinearLayout
            android:id="@+id/hud_text_bps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            >
            <TextView
                android:id="@+id/hud_text_bps_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:typeface="monospace" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
